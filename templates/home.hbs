{{> html}}

<div class='__page-container'>

  {{> m_overlay_nav_header }}

  <header class='__banner--FH banner--home' role='banner'>

    <div class='__banner__intro __banner__intro--home'>

      <div class='_site-width'>
        <div class='_copy-width home'>

          <div class="__banner__welcome">

            <div class="__banner__logo">
{{!--               <p class="brand-logo u-lightText logo--white">{{> logo }}</p> --}}
            </div>

          </div>

        </div>
      </div>

    </div>

    <div class='__banner__content __banner__content--home'>

      <h1 class="brand--HEADING">We Love RELOVE</h1>

    </div>

  </header>


  <div class='__content-container'>

    <div class='__content content content--home' role='main'>

      {{#each collections.mainStory }}

        <section id="{{ this.section }}"
          class='__section __section--{{ this.section }} {{ this.mindset }} {{ this.section }}'>

          <div class='_site-width _site-width--{{ this.section }}'>

            <div class='_copy-width _copy--{{ this.section }}'>

              {{#if this.heading }}<h2>{{{ this.heading }}}</h2> {{/if}}

              {{#if this.quote }}<blockquote>{{{ this.quote }}}</blockquote> {{/if}}


              {{{ this.contents }}}


            </div>

          </div>

        </section>

      {{/each}}

      {{> m_overlay_nav }}

  </div>


  {{> footer }}

</div>


{{> close}}
